<p style="color: green"><%= notice %></p>

<h1>Les évènements à venir</h1>

<div class="row mb-5 col" id="events">
  <% @events.each do |event| %>
  <div class="col">
    <%= render event %>
    <p>
      <%= link_to "Show this event", event %>
    </p>
  </div>
  <% end %>
</div>

<% if user_signed_in? %>  
  <%= link_to "Créer un évènement", new_event_path %>
<% else %>  
  <%= button_to "Créer un évènement", new_user_session_path%>
<% end %>